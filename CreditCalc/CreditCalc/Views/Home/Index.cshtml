@model CreditCalc.Models.CalcData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>.btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
        }</style>
</head>
<body>
    <center>
        <h2>
            В данном приложении Вы можете посчитать ежемесячный платеж по кредиту,
            сумму переплаты за весь период пользования кредитом
        </h2>
    </center>
    <h3>Укажите данные для расчета:</h3>
    <div class="panel-body">
        @using (Html.BeginForm())
        { @Html.ValidationSummary()
            <div class="form-group">Сумма кредита: @Html.TextBoxFor(x => x.CreditCash, new { @class = "form-control", style = "width:100%", placeholder = "в рублях" })</div>
            <div class="form-group">Срок кредита: @Html.TextBoxFor(x => x.CreditTime, new { @class = "form-control", style = "width:100%", placeholder = "в месяцах" })</div>
            <div class="form-group">Ваша процентная ставка: @Html.TextBoxFor(x => x.CreditPercent, new { @class = "form-control", style = "width:100%", placeholder = "%" })</div>
            <div class="form-group">Вид расчета @Html.DropDownListFor(x => x.TypeCalc, new[] {
                new SelectListItem() { Text = "Аннуитентный", Value = Boolean.TrueString},
                new SelectListItem() { Text = "Дифференцированный", Value = Boolean.FalseString}}, "Выберите вариант", new { @class = "form-control" })</div>

            <div class="form-group"><input type="submit" value="Посчитать" class="btn btn-success" /></div>
        }
    </div>
</body>
</html>

